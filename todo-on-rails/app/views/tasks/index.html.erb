<h1 style="font-family:sans-serif;">To-Do On Rails!</h1>

<%= link_to image_tag("newtask.png", :border => 0), new_task_path %>

<br />

<table style="margin:0 auto; text-align:center; border-collapse:collapse; table-layout:fixed; width:100%;">
  <tr>
    <th style="font-size:125%; font-family:sans-serif;">Task</th>
    <th style="font-size:125%; font-family:sans-serif;">Due Date</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td style="border-right:1px solid black;">
        <span style="padding-left:17%;"><%= task.taskTitle %></span>
        <span style="float:right;">
            <%= link_to image_tag("view.png", :border => 0), task %>
            <%= link_to  image_tag("edit.png", :border => 0), edit_task_path(task) %>
            <%= link_to image_tag("done.png", :border => 0), task, method: :finish %>
            <%= link_to  image_tag("trash.png", :border => 0), task, method: :delete, 
                                                           data: { confirm: 'Are you sure you want to delete this task?' } %>
        </span>
    </td>
    <td><%= task.due %></td>
  </tr>
<% end %>
</table>

<br />
